{
  "variables": {
    "region": "ap-southeast-2"
  },
  "builders": [
    {
      "access_key": "{{user `aws_access_key`}}",
      "ami_name": "david-packer-test-{{timestamp}}",
      "instance_type": "t2.micro",
      "region": "{{user `region`}}",
      "ssh_username": "ec2-user",
      "source_ami": "ami-0970010f37c4f9c8d",
      "type": "amazon-ebs",
      "iam_instance_profile": "packer-builder-instance-profile"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./welcome.txt",
      "destination": "/home/ec2-user/"
    },
    {
      "type": "shell",
      "inline": ["ls -al /home/ec2-user", "cat /home/ec2-user/welcome.txt"]
    },
    {
      "type": "shell",
      "inline": ["sudo yum update -y", "sudo yum install ansible -y"]
    },
    {
      "type": "ansible-local",
      "playbook_dir": "./ansible",
      "playbook_file": "./ansible/playbook.yml"
    }
  ]
}
